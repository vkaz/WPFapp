<Window x:Class="WpfApp.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Window3" Height="650" Width="500">
    <Grid>
        <Button Content="Change password" HorizontalAlignment="Left" Margin="10,589,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <DataGrid Name="gd" HorizontalAlignment="Left" Height="551" Margin="10,10,0,0" VerticalAlignment="Top" Width="289" Loaded="Gd_Loaded">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="btn" Content="Show" Click="Btn_Click" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Button" HorizontalAlignment="Right" Height="25" Margin="0,10,0,0" VerticalAlignment="Top" Width="49" Click="Button_Click"/>
    </Grid>
</Window>
